{
  "manifest_version": 3,
  "name": "Chrome 内网智能化助手",
  "version": "1.0.0",
  "description": "录制并回放网页操作，自动化处理内网任务。",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}